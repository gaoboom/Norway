@model Norway.Models.FeedBack
@{
    ViewBag.Title = "FeedBack";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2><span class="label label-primary" style="display:block;">意见及建议</span></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Name:</label>
                    @Html.TextBoxFor(x => x.Name,new { @class="form-control"})
                </div>
                <div class="form-group">
                    <label>Title:</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Content:</label>
                    @Html.TextAreaFor(x => x.Content, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Contact:</label>
                    @Html.TextBoxFor(x => x.Contact, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-default">提交</button>
            }
        </div>
    </div>
</div>

